          "id": "ConferenceUpdated",
          "format": "CloudEvents/1.0",
          "basemessageurl": "/messagegroups/example.conference.management/messages/ConferenceUpdated",
          "description": "A conference has been updated"
        },
        "ConferenceCancelled": {
          "id": "ConferenceCancelled",
          "basemessageurl": "/messagegroups/example.conference.management/messages/ConferenceCancelled",
          "format": "CloudEvents/1.0",
          "description": "A conference has been cancelled",
          "binding": "HTTP",
          "message": {
          }
        }
      }
    }
