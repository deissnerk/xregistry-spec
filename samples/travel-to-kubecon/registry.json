            }
          },
          "schemaformat": "JSONSchema/draft-07",
          "schema": {
            "type": "object",
            "properties": {
              "conferenceKey": {
                "type": "object",
                "properties": {
                  "managedBy": {
                    "type": "string"
                  },
                  "organizer": {
                    "type": "string"
                  },
                  "conferenceId": {
                    "type": "string"
                  }
                }
              },
              "discount": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "price": {
                    "type": "object",
                    "properties": {
                      "currency": {
                        "type": "string"
