                }
              }
            }
          }
        }
      }
    }
  },
  "endpoints": {
    "example.conference.provider": {
      "id": "example.conference.provider",
      "url": "https://provider.conference.example",
      "usage": "producer",
      "description": "The conference provider service",
      "format": "CloudEvents/1.0",
      "binding": "HTTP",
      "messages": {
        "DiscountOffered": {
          "id": "DiscountOffered",
          "basemessageurl": "/messagegroups/example.conference.provider/messages/DiscountOffered",
          "description": "A discount for conference attendees has been offered by the provider",
          "binding": "HTTP",
          "message": {
            "method": "POST",
            "path": "/discounts"
          }
        },
        "DiscountGranted": {
          "id": "DiscountGranted",
          "basemessageurl": "/messagegroups/example.conference.provider/messages/DiscountGranted",
          "description": "A discount has been granted to a customer",
          "binding": "HTTP",
          "message": {
            "method": "POST",
            "path": "/discounts"
          }
        }
      }
    },
    "example.conference.management": {
      "id": "example.conference.management",
      "url": "https://management.conference.example/subscribe",
      "binding": "HTTP",
      "usage": "subscriber",
      "config": {
        "protocol": "HTTP"
      },
      "description": "The conference management service",
      "messages": {
        "ConferencePlanned": {
